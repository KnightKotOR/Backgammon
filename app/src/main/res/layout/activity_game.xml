<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/board"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/board"
    tools:context="com.example.backgammon.GameActivity">

    <GridView
        android:id="@+id/leftView"
        android:layout_marginStart="90dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:layout_width="280dp"
        android:layout_height="415dp"
        android:numColumns="6"
        android:verticalSpacing="240dp"
        >
    </GridView>

    <GridView
        android:id="@+id/rightView"
        android:layout_width="280dp"
        android:layout_height="415dp"
        android:layout_marginStart="425dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:numColumns="6"
        android:verticalSpacing="240dp" />

    <TextView
        android:id="@+id/black_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="23dp"
        android:width="32dp"
        android:height="32dp"
        android:background="@drawable/black"
        android:gravity="center"
        android:text="@string/counter"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/current_turn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="173dp"
        android:layout_marginEnd="23dp"
        android:foregroundGravity="center_vertical"
        android:width="32dp"
        android:height="32dp"
        android:background="@drawable/black"
        android:gravity="center_vertical"
        android:text=""
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/white_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="80dp"
        android:width="32dp"
        android:height="32dp"
        android:background="@drawable/white"
        android:gravity="center"
        android:text="@string/counter"
        android:textColor="@color/black"/>

    <FrameLayout
        android:layout_width="128dp"
        android:layout_height="32dp"
        android:foregroundGravity="center_vertical"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="503dp"
        android:layout_marginBottom="179dp">

        <ImageView
            android:id="@+id/dice1"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:srcCompat="@drawable/d1" />

        <ImageView
            android:id="@+id/dice2"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:srcCompat="@drawable/d1"
            android:layout_marginStart="32dp"/>

        <ImageView
            android:id="@+id/dice3"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:srcCompat="@drawable/d1"
            android:layout_marginStart="64dp"/>

        <ImageView
            android:id="@+id/dice4"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="96dp"
            app:srcCompat="@drawable/d1" />
    </FrameLayout>


    <!-- Выброшенные черные -->



    <!-- Выброшенные белые -->



    <!-- Индикатор хода -->


</RelativeLayout>